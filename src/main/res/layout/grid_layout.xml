<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/to_label" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/to_hint" />

    <!-- -->
    <!-- Login -->
    <!-- -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/to_login" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/h_login" />

    <!-- -->
    <!-- Div do login -->
    <!-- -->


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:gravity="top"
        android:hint="@string/message" />

    <!--  -->
    <!-- Botao para enviar -->
    <!-- -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:text="@string/send" />



    <!-- -->
    <!-- Senha -->
    <!-- -->

    <TextView
        android:id="@+id/to_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_login"
        android:layout_alignParentLeft="true"
        android:paddingTop="14dp"
        android:text="@string/to_senha" />

    <EditText
        android:id="@+id/txtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_login"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/to_senha"
        android:hint="@string/h_senha" />

    <!---->
    <!--    Div do assunto -->
    <!---->

    <TextView
        android:id="@+id/to_assunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_senha"
        android:layout_alignParentLeft="true"
        android:paddingTop="14dp"
        android:text="@string/to_assunto" />

    <EditText
        android:id="@+id/txtAssunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_senha"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/to_assunto"
        android:hint="@string/h_assunto" />


</GridLayout>